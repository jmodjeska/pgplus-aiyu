default_profile: 'test'
admin_access: 'raindog'

profiles:
  test:
    talker_name: 'talker_name'
    ip: '0.0.0.0'
    port: '2020'
    username: 'aiyu'
    password: 'hunter'
    prompt: 'PG\+\>'
    socials_dir: '/Users/me/code/talker/files/socials'

  prod:
    talker_name: 'real-talker-name'
