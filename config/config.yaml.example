timings:
  idle_interval:       10 # mins
  clear_log_interval:  60 # mins
  queue_read_interval:  2 # secs
  session_duration:     2 # hours
  slowness_tolerance:   3 # seconds
  telnet_timeout:       3 # seconds
  max_requests:        50 # requests
  max_reconnects:       1 # per hour

triggers:
  direct_msgs: ["tells you", "asks of you", "exclaims to you"]
  room_msgs: ["says", "asks", "exclaims"]
  channel_prefixes: ["(UberChannel)", "[UberSpod]"]
  channel_commands: ['cu', "pu"]
